{# templates/security/access_denied_standalone.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .access-denied-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .access-denied-card {
            width: 100%;
            max-width: 500px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        .access-denied-header {
            border-radius: 10px 10px 0 0 !important;
        }
        .access-denied-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            color: #dc3545;
        }
    </style>
</head>
<body>
<div class="access-denied-container">
    <div class="access-denied-card card">
        <div class="card-header access-denied-header bg-danger text-white text-center py-4">
            <i class="fas fa-ban access-denied-icon"></i>
            <h1 class="h3 mb-0">Access Denied</h1>
        </div>
        <div class="card-body text-center py-5">
            <h3 class="text-danger mb-4">You don't have permission to access this resource</h3>

            {% if exception is defined and exception.message %}
                <div class="alert alert-warning mb-4">
                    {{ exception.message }}
                </div>
            {% endif %}

            <div class="d-flex justify-content-center gap-3">
                {% if app.user %}
                    <a href="{{ path('app_home') }}" class="btn btn-primary px-4">
                        <i class="fas fa-home me-2"></i> Home
                    </a>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary px-4">
                        <i class="fas fa-sign-in-alt me-2"></i> Login
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>