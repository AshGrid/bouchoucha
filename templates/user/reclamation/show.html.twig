{% extends 'user/base.html.twig' %}

{% block title %}Reclamation Details - LifeSure{% endblock %}

{% block body %}
    <section class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm border-0 rounded-lg overflow-hidden">
                    <!-- Header Section -->
                    <div class="card-header bg-primary text-white py-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0"><i class="fas fa-exclamation-circle me-2"></i> Reclamation Details</h3>
                            <div>
                                <a href="{{ path('app_reclamation_index') }}" class="btn btn-light rounded-pill me-2">
                                    <i class="fas fa-arrow-left me-2"></i> Back to List
                                </a>
                                <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning rounded-pill text-white">
                                    <i class="fas fa-edit me-2"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Content Section -->
                    <div class="card-body p-5">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="info-card bg-light p-4 rounded-3">
                                    <h5 class="text-muted mb-3"><i class="fas fa-id-card me-2"></i> Reclamation ID</h5>
                                    <p class="h4">{{ reclamation.id }}</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="info-card bg-light p-4 rounded-3">
                                    <h5 class="text-muted mb-3"><i class="fas fa-tag me-2"></i> Status</h5>
                                    <span class="badge bg-{{ reclamation.statut == 'Resolved' ? 'success' : (reclamation.statut == 'In Progress' ? 'warning' : 'danger') }} py-2 px-3 fs-6">
                                        {{ reclamation.statut }}
                                    </span>
                                </div>
                            </div>
                        </div>



                        <div class="mb-4">
                            <h4 class="text-primary mb-3"><i class="fas fa-align-left me-2"></i> Description</h4>
                            <div class="p-4 bg-light rounded-3">
                                <p class="mb-0">{{ reclamation.description }}</p>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-5">
                            {{ include('user/reclamation/_delete_form.html.twig') }}

                            <div>
                                <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning rounded-pill text-white px-4 py-2">
                                    <i class="fas fa-edit me-2"></i> Edit Reclamation
                                </a>
                                <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary rounded-pill px-4 py-2 ms-2">
                                    <i class="fas fa-list me-2"></i> View All Reclamations
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .card-header {
            border-bottom: none;
        }
        .info-card {
            height: 100%;
            transition: transform 0.2s;
        }
        .info-card:hover {
            transform: translateY(-5px);
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #bb2d3b;
            border-color: #bb2d3b;
        }
    </style>
{% endblock %}