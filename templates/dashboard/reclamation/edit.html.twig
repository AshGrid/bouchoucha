{% extends 'dashboard/base.html.twig' %}

{% block title %}Edit Reclamation #{{ reclamation.id }} - Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-edit mr-2"></i> Edit Reclamation #{{ reclamation.id }}
            </h1>
            <a href="{{ path('app_reclamation_index_dashboard') }}"
               class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50 mr-1"></i> Back to List
            </a>
        </div>

        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-primary">
                        <h6 class="m-0 font-weight-bold text-white">Edit Complaint Details</h6>
                        <a href="{{ path('admin_reclamation_show', {'id': reclamation.id}) }}"
                           class="btn btn-light btn-sm">
                            <i class="fas fa-eye fa-sm mr-1"></i> View
                        </a>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        {{ include('dashboard/reclamation/_form.html.twig', {
                            'button_label': 'Update',
                            'button_icon': 'save',
                            'button_class': 'btn-primary'
                        }) }}

                        <hr class="mt-4 mb-4">

                        <div class="d-flex justify-content-end">
                            {{ include('dashboard/reclamation/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
{% endblock %}