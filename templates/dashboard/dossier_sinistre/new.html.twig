{% extends 'dashboard/base.html.twig' %}

{% block title %}New Insurance Claim - Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-file-medical mr-2"></i> New Insurance Claim
            </h1>
            <a href="{{ path('app_dossier_sinistre_index_dashboard') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50 mr-1"></i> Back to Claims
            </a>
        </div>

        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-primary">
                        <h6 class="m-0 font-weight-bold text-white">Claim Information</h6>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="row">
                            <!-- Policy Number -->
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    {{ form_label(form.numeroPolice, 'Policy Number', {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-file-invoice text-primary"></i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.numeroPolice, {'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Enter policy number'
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.numeroPolice) }}
                                </div>
                            </div>

                            <!-- Claim Status -->
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    {{ form_label(form.etat, 'Claim Status', {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-tag text-primary"></i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.etat, {'attr': {
                                            'class': 'form-control',
                                        }}) }}
                                    </div>
                                    {{ form_errors(form.etat) }}
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12 mb-3">
                                <div class="form-group">
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                                    {{ form_widget(form.description, {'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Describe the incident in detail',
                                        'rows': 5
                                    }}) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>

                            <!-- Supporting Documents -->
                            <div class="col-12 mb-4">
                                <label class="font-weight-bold text-primary">
                                    <i class="fas fa-paperclip mr-2"></i> Supporting Documents
                                </label>
                                <div class="card border-left-primary shadow py-2">
                                    <div class="card-body">
                                        <div class="text-center">
                                            <i class="fas fa-cloud-upload-alt fa-2x text-gray-300 mb-3"></i>
                                            <p class="mb-2">Drag & drop files here or click to browse</p>
                                            <small class="text-muted">Maximum file size: 5MB (PDF, JPG, PNG)</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-save"></i>
                                    </span>
                                    <span class="text">Submit Claim</span>
                                </button>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add any additional JavaScript needed for the dashboard
        $(document).ready(function() {
            // Example: Enable Bootstrap validation
            (function() {
                'use strict';
                window.addEventListener('load', function() {
                    var forms = document.getElementsByClassName('needs-validation');
                    Array.prototype.filter.call(forms, function(form) {
                        form.addEventListener('submit', function(event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
        });
    </script>
{% endblock %}