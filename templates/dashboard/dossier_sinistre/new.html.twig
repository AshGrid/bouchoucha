{% extends 'dashboard/base.html.twig' %}

{% block title %}Insurance Claims - LifeSure{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Insurance Claims Management</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Claims List</h6>
                <a href="{{ path('app_dossier_sinistre_new_dashboard') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus mr-1"></i> New Claim
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Claim #</th>
                            <th>Policy #</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for dossier_sinistre in dossier_sinistres %}
                            <tr>
                                <td>{{ dossier_sinistre.id }}</td>
                                <td>{{ dossier_sinistre.numeroPolice }}</td>
                                <td>{{ dossier_sinistre.description|u.truncate(50, '...') }}</td>
                                <td>
                                    <span class="badge
                                        {% if dossier_sinistre.etat == 'Pending' %}badge-warning
                                        {% elseif dossier_sinistre.etat == 'Approved' %}badge-success
                                        {% elseif dossier_sinistre.etat == 'Rejected' %}badge-danger
                                        {% else %}badge-secondary
                                        {% endif %}">
                                        {{ dossier_sinistre.etat }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_dossier_sinistre_show_dashboard', {'id': dossier_sinistre.id}) }}"
                                       class="btn btn-info btn-circle btn-sm"
                                       title="View">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_dossier_sinistre_edit_dashboard', {'id': dossier_sinistre.id}) }}"
                                       class="btn btn-warning btn-circle btn-sm"
                                       title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_dossier_sinistre_delete_dashboard', {'id': dossier_sinistre.id}) }}"
                                          style="display: inline-block;"
                                          onsubmit="return confirm('Are you sure you want to delete this claim?');">
                                        <input type="hidden" name="_method" value="POST">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier_sinistre.id) }}">
                                        <button class="btn btn-danger btn-circle btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle me-2"></i> No claims found
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Page level plugins -->
    <script src="{{ asset('assets/dashboard/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/dashboard/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "pageLength": 10,
                "ordering": true,
                "responsive": true,
                "language": {
                    "paginate": {
                        "previous": "<i class='fas fa-angle-left'></i>",
                        "next": "<i class='fas fa-angle-right'></i>"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": [4] } // Disable sorting for Actions column
                ]
            });
        });
    </script>
{% endblock %}